<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:riv = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_main_gray">
    <include layout="@layout/title_bar_four"></include>
    <!-- TODO: Update blank fragment layout -->
    <cn.xiaocool.hongyunschool.view.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@color/themeColor">
                <cn.xiaocool.hongyunschool.view.RoundImageView
                    android:id="@+id/fragment_four_iv_avatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/hyx_default"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    riv:border_thickness="5dp"
                    riv:border_outside_color="#8CDDED"/>
                <TextView
                    android:id="@+id/fragment_four_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_title_main"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/fragment_four_iv_avatar"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/fragment_four_rl_service"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="60dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/fuwugoumai"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务购买"
                    android:textSize="@dimen/font_title_main"
                    android:textColor="@color/font_title_main"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dp"/>
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_arrow_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>
            <include layout="@layout/divider_line_half"></include>
            <RelativeLayout
                android:id="@+id/fragment_four_rl_changebaby"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="60dp"
                android:visibility="gone">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/tongxunlu"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="孩子切换"
                    android:textSize="@dimen/font_title_main"
                    android:textColor="@color/font_title_main"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dp"/>
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_arrow_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>
            <!--<include layout="@layout/divider_line_half"></include>-->
            <RelativeLayout
                android:id="@+id/fragment_four_rl_address"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="60dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/tongxunlu"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="通讯录"
                    android:textSize="@dimen/font_title_main"
                    android:textColor="@color/font_title_main"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dp"/>
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_arrow_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>
            <include layout="@layout/divider_line_half"></include>
            <RelativeLayout
                android:id="@+id/fragment_four_rl_jifen"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="60dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/wodejifen"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的积分"
                    android:textSize="@dimen/font_title_main"
                    android:textColor="@color/font_title_main"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dp"/>
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_arrow_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>
            <include layout="@layout/divider_line_half"></include>
            <RelativeLayout
                android:id="@+id/fragment_four_rl_system"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="60dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/xitongtongzhi"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="系统通知"
                    android:textSize="@dimen/font_title_main"
                    android:textColor="@color/font_title_main"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dp"/>
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_arrow_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>
            <include layout="@layout/divider_line_half"></include>
            <RelativeLayout
                android:id="@+id/fragment_four_rl_online"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="60dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/zaixiankefu"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="在线客服"
                    android:textSize="@dimen/font_title_main"
                    android:textColor="@color/font_title_main"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dp"/>
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_arrow_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>
            <include layout="@layout/divider_line_half"></include>
            <RelativeLayout
                android:id="@+id/fragment_four_rl_code"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="60dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/kehuduanerweima"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="客户端二维码"
                    android:textSize="@dimen/font_title_main"
                    android:textColor="@color/font_title_main"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dp"/>
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_arrow_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>
        </LinearLayout>
    </cn.xiaocool.hongyunschool.view.ReboundScrollView>


</LinearLayout>
